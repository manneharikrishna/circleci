{
  "family": "${taskdef}",
	"networkMode": "awsvpc",
	"executionRoleArn": "${exec_role_arn}",
	"taskRoleArn": "${exec_role_arn}",
	"containerDefinitions": [{
		"image": "${ecr_arn}:latest",
		"name": "webapp",
		"portMappings": [{
          "containerPort": 8888,
		  "hostPort": 8888
			}
		],
		"logConfiguration": {
			"logDriver": "awslogs",
			"options": {
              "awslogs-group": "/ecs/${taskdef}",
				"awslogs-region": "${region}",
				"awslogs-stream-prefix": "ecs"
			}
		}
	}],
	"requiresCompatibilities": [
		"FARGATE",
		"EC2"
	],
  "cpu": "256",
  "memory": "512"
}
